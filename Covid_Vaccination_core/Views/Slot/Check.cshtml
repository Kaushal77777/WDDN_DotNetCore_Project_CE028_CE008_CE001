<!DOCTYPE html>

@{
    var phsession = @httpContextAccessor.HttpContext.Session.GetString("phoneno");
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style type="text/css">
        .auto-style1 {
            width: 250px;
        }

        .auto-style2 {
            width: 100%;
            margin-right: 0px;
        }
    </style>
</head>
<body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <!-- Navbar content -->
            <a class="navbar-brand" href="/default.html">Co-Win</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="User" asp-action="Login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="User" asp-action="Registration" class="nav-link">Registration</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Slot" asp-action="Book" class="nav-link">Book Your Slot</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Slot" asp-action="Check" class="nav-link">Check Status</a>
                    </li>
                </ul>
            </div>
            @if (phsession != null)
            {
                <label id="navuser" class="text-warning mr-5">Welcome @ViewBag.user.Name</label>
            }
            else
            {
                <label id="navuser" class="text-warning mr-5">Please Login</label>
            }
            <input type="button" value="Logout" Text="Logout" class="btn btn-outline-success my-2 my-sm-0" onclick="location.href='@Url.Action("LogOut", "Home")'" />
        </nav>

        <header class="jumbotron" style="background-color:#ff1a66;">
            <h1 class="text-center display-3" id="title"> Check Status </h1>
            <div class="container">
                <p id="description" class="lead">
                    SWASTHASYA SWAASTHYA RAKSHANAM AATURASYA VIKARA PRASHAMANAM CHAL
                </p>
            </div>

        </header>

        <div class="container">

            <h2 class="display-5"> Status Info </h2>


            <!-- TEXTB0X: Details -->
            <div class="form-group d-flex">
                <table class="auto-style2 form-group d-flex">
                    <tr>
                        <td class="auto-style1">
                            <label for="name">Name : </label>
                        </td>
                        <td>
                            @if (phsession != null)
                            {
                                <label id="Name">@ViewBag.user.Name</label>
                            }
                            else
                            {
                                <label id="Name"></label>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style1">
                            <label for="adharno">Adhar Number : </label>
                        </td>
                        <td>
                            @if (phsession != null)
                            {
                                <label id="adharno">@ViewBag.user.Adharno</label>
                            }
                            else
                            {
                                <label id="adharno"></label>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style1">
                            <label for="email">Email : </label>
                        </td>
                        <td>
                            @if (phsession != null)
                            {
                                <label id="email">@ViewBag.user.Email</label>
                            }
                            else
                            {
                                <label id="email"></label>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style1">
                            <label for="contact">Contact : </label>
                        </td>
                        <td>
                            @if (phsession != null)
                            {
                                <label id="contact">@ViewBag.user.Phoneno</label>
                            }
                            else
                            {
                                <label id="contact"></label>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style1">
                            <label for="bookstatus">Status : </label>
                        </td>
                        <td>
                            @if (phsession != null)
                            {
                                if (ViewBag.status == "Booked")
                                {
                                    <label id="bookstatusdb" class="text-success">@ViewBag.status</label>
                                }
                                else
                                {
                                    <label id="bookstatusdb" class="text-danger">@ViewBag.status</label>
                                }
                            }
                            else
                            {
                                <label id="status"></label>
                            }
                        </td>
                    </tr>
                </table>
            </div>



        </div>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />

</body>


</html>
